<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>マスター詳細</title>
  <link rel="stylesheet" href="/public/styles.css">

  <style>
    /* ===== 高密度・業務用 ===== */

    .detail-wrap {
    max-width: 900px;
    margin: 0 auto;
    padding: 10px;
    }

    .card {
    background: #fff;
    border: 1px solid #e5e7eb;
    border-radius: 4px;     /* 丸み最小 */
    box-shadow: none;       /* 影なし */
    }

    /* テーブル全体 */
    .table {
    width: 100%;
    border-collapse: collapse;
    font-size: 13px;        /* 少し小さく */
    }

    /* 行 */
    .table th,
    .table td {
    padding: 4px 8px;       /* ← ここが一番効く */
    line-height: 1.4;       /* 文字の約2〜3倍 */
    border-bottom: 1px solid #e5e7eb;
    vertical-align: top;
    }

    /* キー側 */
    .table th {
    width: 180px;
    background: #f9fafb;
    font-weight: 600;
    }

    /* 値側 */
    .value {
    white-space: pre-wrap;
    word-break: break-word;
    }

    /* バッジも小さく */
    .badge {
    padding: 1px 6px;
    font-size: 11px;
    line-height: 1.2;
    }

    /* 上部ヘッダも詰める */
    .detail-title {
    font-size: 18px;
    margin-bottom: 4px;
    }

    .detail-sub {
    font-size: 12px;
    margin-bottom: 8px;
    }

  </style>
</head>

<body>
  <div class="detail-wrap">
    <div class="detail-head">
      <div>
        <h1 class="detail-title">マスター詳細</h1>
        <p class="detail-sub">
          <span class="pill mono"><%= table %></span>
          <span class="pill mono">id=<%= row.id %></span>
        </p>
      </div>

      <div class="detail-actions">
        <a class="btn" href="/masters">← 一覧に戻る</a>
      </div>
    </div>

    <%
// ===== 日本語ラベル =====
const jpMap = {
  "id": "ID",
  "is_active": "有効",
  "PN": "型番（旧）",
  "PN2": "型番",
  "type": "タイプ",
  "suplier": "仕入先",          // ←DBが supplier なら supplier に直す
  "supplier": "仕入先",
  "inch": "インチ数",
  "mount_type": "取付方式",
  "orientation": "設置向き",
  "panel_brand": "パネルメーカー",
  "display_area": "表示領域",
  "resolution": "解像度",
  "brightness": "輝度",
  "contrast_ratio": "コントラスト比",
  "response_time": "応答速度",
  "refresh_rate": "リフレッシュレート",
  "viewing_angle": "視野角",
  "backlight_type": "バックライト種類",
  "life_time": "寿命",
  "power_consumption": "消費電力",
  "voltage": "電圧",
  "tempurature_operating": "動作温度",
  "humidity_operationg": "動作湿度",
  "warranty_term": "保証期間",
  "remote_controller_attachTF": "リモコン付属",
  "key_attachTF": "鍵付属",
  "power_cable_attachTF": "電源ケーブル付属",
  "FC": "Flicker Compensation",
  "brightness_sensor": "明るさセンサー",
  "IP": "防塵防水等級",
  "color": "筐体色"
};

function isValid(v) {
  return v !== null && v !== undefined && v !== '' && v !== 'NULL';
}

// 重要項目（必要に応じて追加/削除OK）
const IMPORTANT_KEYS = ["id","PN","PN2","is_active","inch","type","suplier","supplier"];

// row から表示対象だけ抽出（NULL系は落とす）
const entries = Object.entries(row || {}).filter(([k, v]) => isValid(v));

// key → label
const labelOf = (key) => jpMap[key] || `${key}（未翻訳）`;

// 重要 / その他 に分ける
const importantEntries = entries.filter(([k]) => IMPORTANT_KEYS.includes(k));
const otherEntries = entries.filter(([k]) => !IMPORTANT_KEYS.includes(k));
%>

<div class="card" style="margin-bottom:16px;">
  <table class="table">
    <tbody>
      <% importantEntries.forEach(([key, value]) => { %>
        <tr>
          <th><%= labelOf(key) %></th>
          <td class="value">
            <% if (key === "is_active") { %>
              <span class="badge <%= Number(value) === 1 ? 'on' : 'off' %>">
                <%= Number(value) === 1 ? "ON" : "OFF" %>
              </span>
            <% } else { %>
              <%= value %>
            <% } %>
          </td>
        </tr>
      <% }); %>

      <% if (importantEntries.length === 0) { %>
        <tr>
          <th>表示</th>
          <td class="value">重要項目が見つかりませんでした。</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<details class="card" <%= otherEntries.length ? "" : "open" %>>
  <summary style="cursor:pointer; font-weight:600; padding:12px;">
    その他の詳細スペック（<%= otherEntries.length %>）
  </summary>

  <table class="table">
    <tbody>
      <% otherEntries.forEach(([key, value]) => { %>
        <tr>
          <th><%= labelOf(key) %></th>
          <td class="value"><%= value %></td>
        </tr>
      <% }); %>

      <% if (otherEntries.length === 0) { %>
        <tr>
          <th>詳細</th>
          <td class="value">追加のスペックはありません。</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</details>


<details class="card">
  <summary style="cursor:pointer; font-weight:600; padding:12px;">
    その他の詳細スペック
  </summary>

  <table class="table">
    <tbody>
      <% Object.entries(row).forEach(([key, value]) => {
           if (IMPORTANT_KEYS.includes(key)) return;
           if (value === null || value === "" || value === "NULL") return;
      %>
        <tr>
          <th class="mono"><%= key %></th>
          <td class="value"><%= value %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</details>

</body>
</html>
